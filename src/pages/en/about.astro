---
import Layout from '../../components/Layout.astro';
import { getContent } from '../../utils/content';

const content = await getContent('en');
---

<Layout title="About Pravilo - Pravilo.Club" description="Ancient Slavic wisdom for modern health" lang="en">
  <main class="page-hero">
    <div class="container">
      <h1 class="page-title">{content.what_is_pravilo.title}</h1>
      <p class="page-subtitle">Ancient strength for modern victories</p>
    </div>
  </main>

  <section class="section">
    <div class="container">
      <div class="content-block">
        <h2>What is Pravilo?</h2>
        <div class="text-content">
          {content.what_is_pravilo.text.split('\n\n').map(paragraph => (
            <p>{paragraph}</p>
          ))}
        </div>
      </div>
    </div>
  </section>

  <section class="section who-for">
    <div class="container">
      <div class="content-block">
        <h2>{content.who_is_pravilo_for.title}</h2>
        <div class="text-content">
          <p>{content.who_is_pravilo_for.text}</p>
        </div>
      </div>
    </div>
  </section>

  <section class="section benefits">
    <div class="container">
      <h2>Benefits of Pravilo</h2>
      <div class="benefits-grid">
        <div class="benefit-card">
          <h3>Spinal Decompression</h3>
          <p>Relieving compression from intervertebral discs and freeing pinched nerves</p>
        </div>
        <div class="benefit-card">
          <h3>Improved Circulation</h3>
          <p>Activating blood flow and lymph flow for better tissue nutrition</p>
        </div>
        <div class="benefit-card">
          <h3>Increased Flexibility</h3>
          <p>Gentle stretching of muscles, ligaments, and tendons</p>
        </div>
        <div class="benefit-card">
          <h3>Stress Relief</h3>
          <p>Deep relaxation and restoration of energetic balance</p>
        </div>
        <div class="benefit-card">
          <h3>Functional Strength</h3>
          <p>Developing strength that serves you in daily life</p>
        </div>
        <div class="benefit-card">
          <h3>Long-term Results</h3>
          <p>Creating a solid foundation for musculoskeletal health</p>
        </div>
      </div>
    </div>
  </section>

  <section class="section cta">
    <div class="container">
      <div class="cta-content">
        <h2>Ready to try?</h2>
        <p>Reserve your spot for the first session and experience the ancient power of Pravilo</p>
        <a href="/en/services" class="btn btn-primary">View Services</a>
        <a href="/en/contact" class="btn btn-secondary">Contact Us</a>
      </div>
    </div>
  </section>
</Layout>

<style>
  .page-hero {
    background: linear-gradient(135deg, #000000 0%, #1a1a1a 100%);
    color: #ffffff;
    padding: 6rem 0 4rem;
    text-align: center;
  }

  .page-title {
    font-size: 3.5rem;
    font-weight: bold;
    margin-bottom: 1rem;
    color: #d4af37;
  }

  .page-subtitle {
    font-size: 1.3rem;
    opacity: 0.9;
  }

  .section {
    padding: 4rem 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .content-block {
    max-width: 800px;
    margin: 0 auto;
  }

  .content-block h2 {
    font-size: 2.5rem;
    color: #d4af37;
    margin-bottom: 2rem;
    text-align: center;
  }

  .text-content {
    font-size: 1.1rem;
    line-height: 1.8;
    color: #cccccc;
  }

  .text-content p {
    margin-bottom: 1.5rem;
  }

  .who-for {
    background: #1a1a1a;
  }

  .benefits {
    background: #000;
  }

  .benefits h2 {
    font-size: 2.5rem;
    color: #d4af37;
    text-align: center;
    margin-bottom: 3rem;
  }

  .benefits-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .benefit-card {
    background: #1a1a1a;
    padding: 2rem;
    border-radius: 10px;
    border-left: 4px solid #d4af37;
    transition: transform 0.3s ease;
  }

  .benefit-card:hover {
    transform: translateY(-5px);
  }

  .benefit-card h3 {
    color: #d4af37;
    margin-bottom: 1rem;
    font-size: 1.3rem;
  }

  .benefit-card p {
    color: #cccccc;
    line-height: 1.6;
  }

  .cta {
    background: linear-gradient(135deg, #1a1a1a 0%, #000000 100%);
    text-align: center;
  }

  .cta-content h2 {
    font-size: 2.5rem;
    color: #d4af37;
    margin-bottom: 1rem;
  }

  .cta-content p {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    color: #cccccc;
  }

  .btn {
    display: inline-block;
    padding: 1rem 2rem;
    margin: 0.5rem;
    border: none;
    border-radius: 5px;
    text-decoration: none;
    font-weight: bold;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .btn-primary {
    background: #d4af37;
    color: #000;
  }

  .btn-primary:hover {
    background: #ff6b35;
    transform: translateY(-2px);
  }

  .btn-secondary {
    background: transparent;
    color: #d4af37;
    border: 2px solid #d4af37;
  }

  .btn-secondary:hover {
    background: #d4af37;
    color: #000;
  }

  @media (max-width: 768px) {
    .page-title {
      font-size: 2.5rem;
    }
    
    .benefits-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
