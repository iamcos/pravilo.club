---
import Layout from '../components/Layout.astro';
---

<Layout title="Page Not Found - Pravilo.Club" description="Sorry, this page does not exist" lang="en">
  <main class="page-hero">
    <div class="container">
      <h1 class="page-title">404</h1>
      <p class="page-subtitle">Page not found</p>
    </div>
  </main>

  <section class="section helpful-links">
    <div class="container">
      <h2 class="section-title">Helpful Links</h2>
      <div class="links-grid">
        <div class="link-card">
          <h3>Offerings</h3>
          <ul>
            <li><a href="/ru/offerings">Услуги и приключения (RU)</a></li>
            <li><a href="/en/offerings">Offerings (EN)</a></li>
            <li><a href="/zh/offerings">综合项目 (ZH)</a></li>
          </ul>
        </div>
        <div class="link-card">
          <h3>Services</h3>
          <ul>
            <li><a href="/ru/services">Услуги (RU)</a></li>
            <li><a href="/en/services">Services (EN)</a></li>
            <li><a href="/zh/services">服务 (ZH)</a></li>
          </ul>
        </div>
        <div class="link-card">
          <h3>Adventures</h3>
          <ul>
            <li><a href="/ru/adventures">Приключения (RU)</a></li>
            <li><a href="/en/adventures">Adventures (EN)</a></li>
            <li><a href="/zh/adventures">户外冒险 (ZH)</a></li>
          </ul>
        </div>
        <div class="link-card">
          <h3>Contact</h3>
          <ul>
            <li><a href="/ru/contact">Связаться (RU)</a></li>
            <li><a href="/en/contact">Contact (EN)</a></li>
            <li><a href="/zh/contact">联系方式 (ZH)</a></li>
          </ul>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .page-hero {
    background: linear-gradient(135deg, #000000 0%, #1a1a1a 100%);
    color: #ffffff;
    padding: 6rem 0 2rem;
    text-align: center;
  }

  .page-title {
    font-size: 3.5rem;
    font-weight: bold;
    margin-bottom: 1rem;
    color: #d4af37;
  }

  .page-subtitle {
    font-size: 1.2rem;
    opacity: 0.9;
  }

  .section {
    padding: 4rem 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .section-title {
    font-size: 2rem;
    color: #d4af37;
    text-align: center;
    margin-bottom: 2rem;
  }

  .links-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .link-card {
    background: #1a1a1a;
    padding: 1.5rem;
    border-radius: 10px;
    border-left: 4px solid #d4af37;
  }

  .link-card h3 {
    color: #d4af37;
    margin-bottom: 0.75rem;
  }

  .link-card ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .link-card li {
    margin: 0.4rem 0;
  }

  .link-card a {
    color: #cccccc;
    text-decoration: none;
  }

  .link-card a:hover {
    color: #ffffff;
    text-decoration: underline;
  }
</style>

